<h1> Message Dashboard<h1>



<table>
  <tr>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
 <% @messages.each do |msg| %>
	<tr>
		<% if msg.reciever == current_user.id %>
		    <td><%= msg.sender %></td>
		    <td><%= msg.reciever %> </td>
		    <td><%= msg.title %> </td>
		    <td><%= msg.message_text %> </td>
	    <% end %>
    </tr>
<% end %>

</table>

<%= link_to "new messages", new_message_path %>