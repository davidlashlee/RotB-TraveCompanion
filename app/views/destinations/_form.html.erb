 <div class="container">
  <div class="row">
    <div class="col-md-4" style="background-color: white; opacity: .75; border: 2px solid;
    border-radius: 25px; padding-bottom: 20px; padding-top: 20px; color: black;">
    <%= form_for @destination do |f| %>

  <p>
    <%= f.label :Location %><br>
    <%= f.text_field :location %>
  </p>
 
  <p>
    <%= f.label :Start_date %><br>
     <%= f.date_select :start_date %>
  </p>
 
 <p>
    <%= f.label :End_date %><br>
    <%= f.date_select :end_date %>
  </p>

  <p>
    <%= f.hidden_field :user_id, :value => @curr_user.id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', destinations_path %>
</div>
</div>
</div>