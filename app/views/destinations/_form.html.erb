 <div class="container">
  <div class="row">
    <div class="col-md-6">
    <%= form_for @destination do |f| %>

  <p>
    <%= f.label :Location %><br>
    <%= f.text_field :location %>
  </p>
 
  <p>
    <%= f.label :Start_date %><br>
    <%= f.text_field :start_date %>
  </p>
 
 <p>
    <%= f.label :End_date %><br>
    <%= f.text_field :end_date %>
  </p>

  <p>
    <%= f.hidden_field :user_id, :value => @curr_user.id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
</div>
</div>