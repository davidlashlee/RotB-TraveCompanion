<html style="
  background: url(http://media2.s-nbcnews.com/i/MSNBC/Components/Video/2014/01_January/140104/tdy_photog_140104.jpg) no-repeat center center fixed;  
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;">



  <div class="col-md-6">
<table class="table table-striped table-hover ">
<h1 style="color: white;">Users</h1>

  <thead>
    <tr>
      <th>Email</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Latest Destination</th>
      <th>Contact Now! </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr class="success">
      <% if user.id != current_user.id %>
        <td><%= user.email %></td>
        <td><%= user.gender %> </td>
        <td><%= user.age %> </td>
        <% unless user.destinations.count == 0 %>
        <td><%= user.destinations.last.location %></td>
        <% else %>
        <td> Still Planning </td>
        <% end %>
        <td><%= link_to 'Send message', new_message_path(user.id) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>




