


<div class="container">
  <div class="row">
  <div class="col-md-6">
<table class="table table-striped table-hover ">
<h1>Users</h1>
<h4><%= link_to 'New Destinations', new_destination_path %> | <%= link_to 'Users', users_path %> | <%= link_to 'Messaging', messages_path %></h4> <br><br>
  <thead>
    <tr>
      <th>Email</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Latest Destination</th>
      <th>Contact Now! </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr class="success">
      <% if user.id != current_user.id %>
        <td><%= user.email %></td>
        <td><%= user.gender %> </td>
        <td><%= user.age %> </td>
        <td><%= user.destinations.last.location %></td>
        <td><%= link_to 'Send message', new_message_path(user.id) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<div class="col-md-6"></div> 




