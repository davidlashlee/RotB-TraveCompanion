<h1>Listing Users</h1>
 
<%= link_to 'New Destinations', new_destination_path %> | <%= link_to 'Users', users_path %> | <%= link_to 'Messaging', messages_path %> <br><br>

<table>
  <tr>
    <th>Email</th>
    <th>Gender</th>
    <th>Age</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <% if user.id != current_user.id %>
        <td><%= user.email %></td>
        <td><%= user.gender %> </td>
        <td><%= user.age %> </td>
        <td><%= link_to 'Send message', new_message_path(user.id) %></td>
      <% end %>
    </tr>
  <% end %>

</table>