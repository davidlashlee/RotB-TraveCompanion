 <div class="container">
  <div class="row">
    <div class="col-md-6">

      <% if @destinations.count == 0 %>
        <h3>You don't have any friends</h3>
      <% else %>
        <h3>Listing Destinations</h1>
          <table class="table table-hover opyellow">
            <thead style="text-color: white; background-color: black;">
              <tr>
                <th>Location</th>
                <th>Email</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Message</th>
              </tr>
            </thead>
            <tbody>
              <% @destinations.each do |dst| %>
                <tr>
                  <td><%= dst.location %></td>
                  <td><%= User.find(dst.user_id).email %> </td>
                  <td><%= dst.start_date %></td>
                  <td><%= dst.end_date %></td>
                  <td><%= link_to 'Send message', new_message_path(current_user.id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table> 
        <% end %>
      </div>
    </div>
  </div>
